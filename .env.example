# Supabase Configuration
# Get these values from your Supabase project dashboard
REACT_APP_SUPABASE_URL=https://your-project-id.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-anon-key-here

# Optional: Supabase Service Role Key (for admin operations)
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration
REACT_APP_DB_CONNECTION_TIMEOUT=10000
REACT_APP_DB_MAX_RETRIES=3
REACT_APP_DB_RETRY_DELAY=1000

# Development Settings
REACT_APP_ENVIRONMENT=development

# API Settings
REACT_APP_API_BASE_URL=http://localhost:3000

# Email Settings (if using custom email templates)
# REACT_APP_EMAIL_FROM=noreply@safesats.com
# REACT_APP_EMAIL_REPLY_TO=support@safesats.com

# Analytics (optional)
# REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Trading Configuration
REACT_APP_ENABLE_TRADING_SIMULATOR=true
REACT_APP_ENABLE_REAL_TRADING=false
REACT_APP_DEFAULT_TRADING_FEE=0.001
REACT_APP_MIN_TRADE_AMOUNT=1000
REACT_APP_MAX_TRADE_AMOUNT=1000000

# Price Service Configuration
REACT_APP_PRICE_UPDATE_INTERVAL=30000
REACT_APP_MWK_USD_RATE=1730
REACT_APP_COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Real-time Configuration
REACT_APP_REALTIME_ENABLED=true
REACT_APP_REALTIME_RECONNECT_ATTEMPTS=5
REACT_APP_REALTIME_RECONNECT_DELAY=1000

# Portfolio Configuration
REACT_APP_INITIAL_PORTFOLIO_BALANCE=100000
REACT_APP_PERFORMANCE_CACHE_TIMEOUT=300000

# Security Settings
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_MAX_LOGIN_ATTEMPTS=5

# Feature Flags
REACT_APP_ENABLE_ADVANCED_CHARTS=true
REACT_APP_ENABLE_PORTFOLIO_ANALYTICS=true
REACT_APP_ENABLE_ORDER_HISTORY=true
REACT_APP_ENABLE_PRICE_ALERTS=false
REACT_APP_ENABLE_SOCIAL_FEATURES=false

# Debug Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info
